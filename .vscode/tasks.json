            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build and run",
            "type": "shell",
            "command": "g++ c_code/cordiac.c -o bin/cordiac.exe; bin/cordiac.exe",
            "group": {
              "kind": "build",
              "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}
